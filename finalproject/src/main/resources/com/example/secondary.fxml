<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.SecondaryController">
    <children>
        <Label text="Yahtzee" />
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <TableView fx:id="scoreTable" layoutX="100.0" layoutY="50.0" prefHeight="300.0" prefWidth="200.0">
                <columns>
                    <TableColumn fx:id="scoreTypes" text="Score Types" prefWidth="100.0"/>
                    <TableColumn fx:id="scores" text="Scores" prefWidth="100.0"/>
                </columns>
                </TableView>
                <VBox alignment="CENTER" spacing="20.0">
                    <children>
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <ImageView fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@img/dice.jpg"/>
                                </ImageView>
                                <ImageView fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@img/dice.jpg"/>
                                </ImageView>
                                <ImageView fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@img/dice.jpg"/>
                                </ImageView>
                                <ImageView fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@img/dice.jpg"/>
                                </ImageView>
                                <ImageView fitHeight="50" fitWidth="50" pickOnBounds="true" preserveRatio="true">
                                    <Image url="@img/dice.jpg"/>
                                </ImageView>
                            </children>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                        </HBox>
                        <Label text="test" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button fx:id="secondaryButton" text="To Main Menu" onAction="#toMainMenu" />
                <Button fx:id="options" text="Options" onAction="#options"/>
                <Button fx:id="quit" text="Quit" onAction = "#quit"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
